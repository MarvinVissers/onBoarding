<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Scherm2">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="373dp"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:src="@drawable/gifje"
        app:layout_constraintBottom_toTopOf="@+id/txtIntro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitel" />

    <TextView
        android:id="@+id/txtTitel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avans introductie"
        android:fontFamily="@font/frutigerltstdblack"
        android:textColor="@color/colorTitle"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.186" />

    <TextView
        android:id="@+id/txtIntro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introductie Avans"
        android:fontFamily="@font/frutigerltstdblack"
        android:textColor="@color/colorHeader2"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.612" />

    <TextView
        android:id="@+id/txtOS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Je bent klaar met MBO, HAVO of misschien een andere weg. Nu ben je natuurlijk wel benieuwd naar wat er allemaal te wachten staat. Click op de video om te zien wat je precies mag verwachten."
        android:fontFamily="@font/frutigerltstdblack"
        android:textSize="12sp"
        android:textColor="@color/colorPlainText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.734" />

    <TextView
        android:id="@+id/tvWeetje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/frutigerltstdblack"
        android:gravity="center"
        android:text="Wist je dat je via Avans gratis Microsoft office applicaties kan downloaden?"
        android:textColor="@color/colorHeader2"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.895" />

    <!-- Table layout voor de bollen om aan te geven welke pagina je bent -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.96">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">

            <TextView
                android:id="@+id/tvPagina1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/pagina_bol_geweest"
                android:text="" />

            <TextView
                android:id="@+id/tvPagina2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/pagina_bol_geweest"
                android:text="" />

            <TextView
                android:id="@+id/tvPagina3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/pagina_bol_niet_geweest"
                android:text=""
                android:onClick="naarScherm3"/>

            <TextView
                android:id="@+id/tvPagina4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/pagina_bol_niet_geweest"
                android:text="" />

            <TextView
                android:id="@+id/tvPagina5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/pagina_bol_niet_geweest"
                android:text="" />

            <TextView
                android:id="@+id/tvPagina6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/pagina_bol_niet_geweest"
                android:text="" />
        </TableRow>
    </TableLayout>

    <!-- Relative layout voor de bollen bovenaan -->
    <RelativeLayout
        android:layout_width="417dp"
        android:layout_height="736dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/tvBolLogoRechts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"

            android:layout_marginEnd="-50dp"
            android:layout_marginTop="-110dp"
            android:background="@drawable/bol_logo_rechts"
            android:alpha="0.75"
            android:text="" />

        <TextView
            android:id="@+id/tvBolLogoLinks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"

            android:layout_marginStart="-140dp"
            android:layout_marginTop="-140dp"
            android:layout_marginEnd="96dp"
            android:background="@drawable/bol_logo_links"
            android:alpha="0.75"
            android:text="" />

        <!-- Textview aanmaken voor het studentnummer, niet zichtbaar voor gebruiker -->
        <TextView
            android:id="@+id/tvStudentnummer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="invisible"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>